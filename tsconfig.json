{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "baseUrl": "./src",
    "paths": {
      "@/routes/*": ["routes/*"],
      "@/repositories/*": ["repositories/*"],
      "@/services/*": ["services/*"],
      "@/models/*": ["models/*"],
      "@/handlers/*": ["handlers/*"],
      "@/database/*": ["database/*"],
      "@/config/*": ["config/*"],
      "@/error-handling/*": ["error-handling/*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
